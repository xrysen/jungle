<body class = "text-center">

  <h1>Login</h1>
  <section class = "signup-form">

    <%= form_tag '/login' do %>
    <strong>E-Mail</strong>
    <br />
    <%= text_field_tag :email %>
    <br />
    <strong>Password</strong>
    <br />
    <%= password_field_tag :password %>
    <br /><br />
    <%= submit_tag "Login", class: "btn btn-default btn-primary" %>
    <% end %>
  </section>
</body>
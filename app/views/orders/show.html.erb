<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h2>Thank you <%= @order.email %> for your order!</h4>
    <br>
  
  
  <tbody>
    
    <% @order.line_items.each do |item| %>
      <%= render 'item', product: Product.find(item.product_id), quantity: item.quantity %>
    <% end %>
   
  </tbody>
  <p>
  <% @total_cost = 0 %>
  <% @order.line_items.each do |item| %>
    <% @total_cost = @total_cost + Product.find(item.product_id).price_cents %>
  <% end %>    
  <h3>Total: <%= humanized_money_with_symbol @total_cost / 100.0 %></h4>
  <br>
  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</div>

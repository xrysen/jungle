<main class="container">
  <div class="order-summary jumbotron">
    <h2 style="text-align: center">Admin Dashboard</h2>
    <table class="table table-striped">
      <tbody>
        <tr>
          <th scope="row">
            <%= link_to 'Total Products', [:admin, :products] %>
          </th>
          <td scope="row"><%= @product_count %></td>
        </tr>
        <tr>
          <th scope="row"><%= link_to 'Total Categories', [:admin, :categories] %></th>
          <td scope="row"><%= @category_count %></td>
        </tr>
      </tbody>
    </table>
  </div>
</main>
